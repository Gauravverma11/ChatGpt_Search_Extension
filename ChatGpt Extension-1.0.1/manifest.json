{
  "manifest_version": 3,
  "name": "ChatGPT Search Bar",
  "version": "1.0",
  "description": "WhatsApp-style in-chat search for ChatGPT.",
  "icons": {
    "48": "icons/icon.png"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://*.chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["content_script.js"],
      "css": ["style.css"]
    }
  ]
}
